/**index.wxss**/
page {
    background: #f4f5f6;
  }
  
  .hide {
    display: none;
  }
  
  .show {
    display: block;
  }
  
  .arrow_left {
    font-size: 40rpx;
    margin-top: 13rpx;
    margin-left: 20rpx;
  }
  
  .page_row {
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    border-bottom: 1px solid grey;
    height: 75rpx;
    margin-top: 13rpx;
    position: relative;
  }
  
  .inp {
    margin-top: 16rpx;
    margin-left: 10rpx;
  }
  
  .search_icon {
    font-size: 40rpx;
    position: absolute;
    right: 84rpx;
    top: 15rpx;
  }
  
  .plus {
    font-size: 40rpx;
    position: absolute;
    right: 20rpx;
    top: 15rpx;
  }
  
  .title {
    width: 20%;
    margin-top: 24rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
  }
  
  .bc_text {
    line-height: 68rpx;
    height: 68rpx;
    margin-top: 34rpx;
  }
  
  .name {
    font-size: 20rpx;
    color: grey;
    margin-left: 30rpx;
    margin-top: 13rpx;
    margin-bottom: 13rpx;
  }
  
  .list_contain {
    background: #fff;
    height: 120rpx;
    font-size: 36rpx;
    position:relative;
  }
  
  .group_pic {
    width: 24%;
    float: left;
    height: 100rpx;
  }
  
  .group_piccontain {
    width: 100rpx;
    height: 100%;
    margin-left: 20%;
    margin-top: 6%
  }
  
  .group_name {
    float: left;
    height: 118rpx;
    line-height: 118rpx;
    width: 75%;
    border-bottom: 1rpx solid #EDEDED;
  }
  
  .group_nub {
    text-align: center;
    margin-top: 10rpx;
    font-size: 28rpx;
    color: grey;
  }
  .disturb{
    width:40rpx;
height:40rpx;
position:absolute;
right:90rpx;
top:36rpx;
  }
  .disturb image{
    width:100% !important;
    height:100% !important;
  }
  .amend{
    width:50rpx;
height:50rpx;
position:absolute;
right:36rpx;
top:36rpx;
  }
  .amend image{
    width:100% !important;
    height:100% !important;
  }
  .inputstyle{
    border-bottom:1px solid #aaa;
  }
  #modal p{
    line-height:2rem
  }
  .checked{
    margin-left:7rem;
  }
  .add_img{
    width:4rem;
    height:4rem;
    margin:0 auto
  }
  