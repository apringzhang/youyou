/* pages/rember/rember.wxss */
.rember{
 height:4rem;
  background:#fff
} 
page {
  background-color: #f1f1f1;
}
.hide{
  display: none;
 }
 .show{ 
  display: block;
 }
 .setpage{
  width:100%;
  height:1.5rem;
  background:yellow;
  
 }
 .edit{
  float:right;
  margin-right:1rem;
  
 }
.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}
.picker_group {
  height:2rem;
  line-height:2rem;
  justify-content:center;
  display:flex;
  align-items:center;
  font-size:0.8rem;
  color:#888;
}

.picker_group picker {
  /* background-color: yellow; */
  color: #64bff1;
  height:1.4rem;
line-height:1.4rem;
  margin: 0 2%;
  padding: 0 2%;
  border: 1rpx solid #64bff1;
  border-radius: 30rpx;
  width:6rem;
  text-align: center;
}
.btn{
  width:2rem;
  height:1rem;
  background:#96EB6A;
  font-size:0.6rem;
  line-height:1rem;
  text-align:center;
  margin-left:0.5rem;
  color:#fff
}
