/* pages/packet/packet.wxss */
.grey{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  padding:0 40rpx;
  background:#f0f0f2;
  box-sizing: border-box;
}
.packet{
  height:90rpx;
  line-height:90rpx;
  padding:0 20rpx;
  margin-top:40rpx;
  background: #ffffff;
  border-top:2rpx solid #dcdcdc;
  border-bottom:2rpx solid #dcdcdc;
  font-size:32rpx;
}
.packet input{
  display:inline-block;
  width:320rpx;
  padding:0;
  overflow:inherit;
}
.packet text{
  display:inline-block;
  width:218rpx;
}
.packet .fr{
  float:right;
  width:auto;
}
.tips{
  margin: 10rpx 20rpx;
  font-size:28rpx;
}
.tips text{
  color:#e6433e;
}
.packet_btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin:40rpx 0;
  background: #ba48ed;
  color: #ffffff;
  border-radius: 10rpx;
  font-size:32rpx;
}
.txt{
  margin-bottom:20rpx;
  text-indent: 1em;
}
.red{
  color:#e6433e;
}