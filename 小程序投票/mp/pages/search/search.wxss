/**index.wxss**/
.join{
  width:300rpx;
  height:60rpx;
  margin:20rpx auto 30rpx;
  line-height: 60rpx;
  border:1px solid #dedede;
  border-radius:30rpx;
  text-align: center;
}
.person {
    padding: 20rpx 20rpx 10rpx;
}
.person navigator {
    position: relative;
    float: left;
    width: 49%;
    margin-bottom: 20rpx;
    background: #ffffff;
    cursor: pointer;
    border: 10rpx solid #cd9dfd;
    border-radius: 5rpx;
    box-sizing: border-box;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
}
.person navigator:nth-child(2n) {
    margin-left: 2%;
}
.person .poll {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 180rpx;
    height: 40rpx;
    padding: 0 10rpx;
    background: rgba(0,0,0,.6);
    color: #ffffff;
    border-bottom-right-radius: 10rpx;
}
.person image{
    display: block;
    width: 100%;
    height: 340rpx;
    margin: 0 auto;
}
.person .info {
    position: relative;
    padding: 12rpx 10rpx;
    color: #666666;
}
.vote_btn {
    display: block;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #ffffff;
    color: #7005da;
    border: 2px solid #7005da;
    border-radius: 50%;
    text-align: center;
}

