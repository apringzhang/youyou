/* pages/my/my.wxss */
.my_bg{
  position:relative;
}
.main_bg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:400rpx;
  z-index:0;
}
.my_info{
  position:relative;
  z-index:1;
  padding-top:60rpx;
  text-align: center;
  height:340rpx;
}
.my_info image,.my_info text{
  display:block;
  margin:0 auto;
}
.my_info image{
  width:180rpx;
  height:180rpx;
  border-radius:50%;
}
.my_info text{
  margin:10rpx auto 20rpx;
  color:#666666;
}
.my_info navigator{
   display: inline-block;
   padding: 15rpx 80rpx;
   background: #ba48ed;
   color: #ffffff;
   border-radius: 4px;
   font-size:32rpx;
}
.my_colum view{
  float:left;
  width:100%;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  background:#f2f2f2;
  box-sizing: border-box;
}
/* .my_colum view:first-child{
  border-right:1px solid #cccccc;
} */
.item navigator {
    display: block;
    position: relative;
    padding: 0 20rpx;
    line-height: 80rpx;
    background: #ffffff;
    font-size:28rpx;
    border-bottom: 1px solid #eeeeee;
}
.item button {
    display: block;
    position: relative;
    padding: 0 20rpx;
    line-height: 80rpx;
    background: #ffffff;
    font-size:28rpx;
    border-bottom: 1px solid #eeeeee;
    border-radius: 0;
    color: blue;
}
.item button::after {
  border: 0;
}
.item navigator image{
  float:right;
  width:16rpx;
  height:28rpx;
  margin-top:28rpx;
}