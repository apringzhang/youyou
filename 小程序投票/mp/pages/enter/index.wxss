/* pages/enternew/enternew.wxss */
.top_info {
  border-bottom: 6px solid #eee;
}

.info_txt {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.info_txt>view:first-child {
  width: 160rpx;
  padding: 0 0 0 20rpx;
  line-height: 46rpx;
}

.info_txt .txt {
  flex: 1;
}

.info_txt .txt textarea {
  width: auto;
  height: 160rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.info_txt .txt image {
  float:left;
  width: 140rpx;
  height: 140rpx;
  margin:0 10rpx 10rpx 0;
}

.border {
  float:left;
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  color: #666;
  text-align: center;
  border: 1px dashed #ddd;
  font-size: 28rpx;
}

.tips {
  margin-top: 20rpx;
  color:#666666;
}
.submit{
  width:400rpx;
  height:70rpx;
  line-height:70rpx;
  margin:30rpx auto;
  text-align: center;
  background:#9b44e0;
  color:#ffffff;
  font-size:32rpx;
}

.audioBg{
  width:96%;
  background:#e9e9e9;
  padding:40rpx;
  border-radius:20rpx;
  box-sizing: border-box;
}
.audioBtn{
  display:flex;
  margin-top:20rpx;
}
.audioBtn>view{
  width:50%;
  text-align: center;
}
.audioBtn text{
  display:block;
  margin:6rpx 0;
  
}
.info_txt .txt .audioBtn image{
  float:none;
  display:block;
  width:60rpx;
  height:60rpx;
  margin:0 auto;
}
.tips1 {
  margin-top: 20rpx;
  color:#666666;
  text-align: center;
}