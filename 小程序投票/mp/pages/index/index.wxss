/**index.wxss**/
.join{
  width:300rpx;
  height:60rpx;
  margin:20rpx auto 20rpx auto;
  line-height: 60rpx;
  border:1px solid #dedede;
  border-radius:30rpx;
  text-align: center;
}
.person {
    padding: 20rpx 20rpx 10rpx;
}
.person navigator {
    position: relative;
    float: left;
    width: 49%;
    margin-bottom: 20rpx;
    background: #ffffff;
    cursor: pointer;
    border: 10rpx solid #cd9dfd;
    border-radius: 5rpx;
    box-sizing: border-box;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
    
}
.person navigator:nth-child(2n) {
    margin-left: 2%;
}
.person .poll {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 180rpx;
    height: 40rpx;
    padding: 0 10rpx;
    background: rgba(0,0,0,.6);
    color: #ffffff;
    border-bottom-right-radius: 10rpx;
}
.person image{
    display: block;
    width: 100%;
    height: 340rpx;
    margin: 0 auto;
}
.person .info {
    position: relative;
    padding: 12rpx 10rpx;
    color: #666666;
}
.vote_btn {
    display: block;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #ffffff;
    color: #7005da;
    border: 2px solid #7005da;
    border-radius: 50%;
    text-align: center;
}
.share{
  float: right;
  margin-right: 20rpx;
}
.share image{
  width:40rpx;
  height:40rpx;
  position: relative;
  top: 10rpx;
}
.share_layer{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.9);
  z-index:10;
}
.share_box{
  width:600rpx;
  margin:0 auto;
  background: #ffffff;
}
.share_bg{
  position:relative;
  width:100%;
  height:300rpx;
  padding:50rpx 0;
}
.share_bg .img_bg{
  position:absolute;
  top:0;
  left:0;
  z-index:2;
  width:100%;
  height:400rpx;
}
.txt_top{
  position:absolute;
  top:40rpx;
  left:50%;
  margin-left:-250rpx;
  z-index:5;
  text-align: center;
}

.share_bg text{
  display:block;
  margin-bottom:40rpx;
  font-size:36rpx;
  text-align: center;
}
.share_avater{
  width:200rpx;
  height:200rpx;
  margin:0 auto;
  border-radius:50%;
}
.share_avater image{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
}
.share_txt{
  padding:0rpx 20rpx 20rpx 0rpx;
  color:#666666;
}
.share_txt .title{
  padding:10rpx 0;
  font-size:32rpx;
  border-bottom:1px solid #666666;
}
.share_txt .title text{
  margin:0 10rpx;
}
.motto{
  height:160rpx;
  margin:20rpx 0;
  font-size:28rpx;
  overflow:hidden;
}
.ico{
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
}
.ico image{
  width:200rpx;
  height:200rpx;
}
.default{
  width:50%;
  margin:25rpx auto;
  border:1px solid #dedede;
  font-size:28rpx;
}
.share_pic{
  display:block;
  padding-bottom:20rpx;
  font-size:28rpx;
  text-align: center;
}
.close{
  width:100rpx;
  height:100rpx;
  margin:30rpx auto 0;
}
.close image{
  width:100rpx;
  height:100rpx;
}
.packet{
  position:absolute;
  top:0;
  right:0;
  z-index:1;
}
.packet image{
  width:50rpx;
  height:54rpx;
}